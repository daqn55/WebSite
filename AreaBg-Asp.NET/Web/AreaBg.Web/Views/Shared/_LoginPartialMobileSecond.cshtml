@using Microsoft.AspNetCore.Identity
@using AreaBg.Data.Models
@inject SignInManager<MyIdentityUser> SignInManager
@inject UserManager<MyIdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <div class="mt-4 ml-2 btn-group font-sp">
        <a href="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="userIc"></a>
        <div class="dropdown-menu dropdown-menu-right mt-2">
            <a class="nav-link userMenu" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Моят профил</a>
            <a class="nav-link userMenu" asp-area="Identity" asp-page="/Account/Manage/MyOrders">Моите поръчки</a>
            <a class="nav-link userMenu" asp-area="Identity" asp-page="/Account/Manage/MyAddresses">Моите адреси</a>
            <div class="dropdown-divider"></div>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link userMenu btn btn-link border-0" style="background: white !important;">Изход</button>
            </form>
        </div>
    </div>
}
else
{
    <div class="btn-group font-sp mt-4">
        <a href="" style="font-size:33px;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="ml-2 userIc"></a>
        <div class="dropdown-menu dropdown-menu-right">
            <a class="nav-link userMenu" asp-area="Identity" asp-page="/Account/Login">Вход</a>
            <a class="nav-link userMenu" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
        </div>
    </div>
}